<% Game.all.each do |game| %>
  <% receiving_smackdown = true %>
  <% if userIsPlayingGame(@user.id,game.id) %>
    <div align="center">
      <% if @dojo%>
        <%= link_to image_tag(game.image_path, :class => "resizable_image", :align => "center"), {:controller => "smackdown_creator", :action => "select_judge", :game_id => game.id, :user_id =>@user.id, :dojo_id => @dojo.id }%>
      <%else%>
        <%= link_to image_tag(game.image_path, :class => "resizable_image", :align => "center"), {:controller => "smackdown_creator", :action => "select_judge", :game_id => game.id, :user_id =>@user.id }%>
      <% end %>
    </div>
    </br>
  <% end %>
<% end %>
<%if !@user.isPlayingAGame%>
  <h3><%=@user.name%> is not playing any game right now. Go and tell him to add games to his profile!</h3>
<%end%>

</div>
