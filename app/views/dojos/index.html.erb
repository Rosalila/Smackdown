<h1>Listing dojos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Main image</th>
      <th>Badge image</th>
      <th>About</th>
      <th>Motto</th>
      <th>Schedule</th>
      <th>Public address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dojos.each do |dojo| %>
      <tr>
        <td><%= dojo.name %></td>
        <td><%= dojo.main_image %></td>
        <td><%= dojo.badge_image %></td>
        <td><%= dojo.about %></td>
        <td><%= dojo.motto %></td>
        <td><%= dojo.schedule %></td>
        <td><%= dojo.public_address %></td>
        <td><%= dojo.latitude %></td>
        <td><%= dojo.longitude %></td>
        <td><%= link_to 'Show', dojo %></td>
        <td><%= link_to 'Edit', edit_dojo_path(dojo) %></td>
        <td><%= link_to 'Destroy', dojo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>


<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>


<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers([
    <% @dojos.each do |dojo| %>
      {
        "lat": <%=dojo.latitude%>,
        "lng": <%=dojo.longitude%>,
        "picture": {
          "url": "<%=dojo.badge_image%>",
          "width":  36,
          "height": 36
        },
        "infowindow": "<%=dojo.motto%> <a href='/dojos/<%=dojo.id%>'>Visit</a>"
      },
    <%end%>
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

<%= link_to 'New Dojo', new_dojo_path %>
