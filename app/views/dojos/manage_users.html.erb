<section class="content-header">
  <h1>
    <% user = User.find_by_id(params[:id].to_i) %>
    Miembros de <%= @dojo.name %>
    <small>administra los usuarios</small>
  </h1>
</section>
<div class="box">
  <div class="row">
    <div class="col-md-12">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Imagen</th>
            <th>Nombre</th>
          </tr>
        </thead>
        <tbody>
          <% @dojo.users.each do |user| %>
              <tr>
                <td>
                  <a href="/home/visit/<%= user.id %>">
                    <img class="resizable_image" src="http://graph.facebook.com/<%= user.uid %>/picture?type=large"/>
                  </a>
                </td>
                <td>
                  <a href="/home/visit/<%= user.id %>">
                    <%=user.name%>
                  </a>
                  <% if UserInDojo.where(user: user,dojo: @dojo)[0].is_admin %>
                    <a href="/dojos/manage_users?dojo_id=<%=@dojo.id%>&remove_admin=<%=user.id%>">
                      <button type="submit" class="btn btn-primary">Quitar admin</button>
                    </a>
                  <%else%>
                    <a href="/dojos/manage_users?dojo_id=<%=@dojo.id%>&make_admin=<%=user.id%>">
                      <button type="submit" class="btn btn-primary">Hacer admin</button>
                    </a>
                  <%end%>
              <a href="/dojos/manage_users?dojo_id=<%=@dojo.id%>&kick=<%=user.id%>">
                <button type="submit" class="btn btn-primary">Desterrar</button>
              </a>
                </td>
              </tr>
            <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th>Imagen</th>
            <th>Nombre</th>
          </tr>
        </tfoot>
      </table>
    </div>


<h2>Agrega nuevos miembros</h2>
    <div class="col-md-12">
      <form role="form" accept-charset="UTF-8" action="/dojos/manage_users" method="get" class="nifty_form">
        <div class="input-group input-group-sm">
          <input name="dojo_id" value="<%=@dojo.id%>" placeholder="Escribe el nombre del usuario aqui." type="hidden" class="form-control">
          <input name="like_param" placeholder="Escribe el nombre del usuario aqui." type="text" class="form-control">
          <span class="input-group-btn">
            <button class="btn btn-info btn-flat" type="submit">Buscar!</button>
          </span>
        </div>
      </form>
    </div>


    <div class="col-md-12">
    <%if @users.count>0%>
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Imagen</th>
            <th>Nombre</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <% if user.id!=current_user.id %>
              <tr>
                <td>
                  <% if user.uid!= nil %>
                    <%= link_to image_tag("http://graph.facebook.com/" + user.uid + "/picture?type=large", :class => "resizable_image"), {:controller => "home", :action => "respond_smackdown" }%>
                  <% end %>
                </td>
                <td>
                  <%= link_to user.name,{:controller => "home", :action => "respond_smackdown" }%>

              <a href="/dojos/manage_users?dojo_id=<%=@dojo.id%>&invite_user=<%=user.id%>">
                <button type="submit" class="btn btn-primary">Agregar</button>
              </a>


                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th>Imagen</th>
            <th>Nombre</th>
          </tr>
        </tfoot>
      </table>
    <%end%>
    </div>

  </div>
</div>
