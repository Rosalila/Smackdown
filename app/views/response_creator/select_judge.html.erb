<section class="content-header">
  <h1>
    Enviar un Smackdown paso 1/3
    <small>selecciona el usuario</small>
  </h1>
</section>

        <form role="form" accept-charset="UTF-8" action="/smackdown_creator/select_judge" method="get" class="nifty_form">
          <div class="form-group">
            <label>Buscar usuario</label>
            <input name="accepted" type="hidden" value="true" />
            <input name="like_param" class="form-control" placeholder="Escribe el nombre del usuario aqui."></input>
            <div class="box-footer">
            <button type="submit" class="btn btn-primary">Buscar</button>
          </div>
        </form>


<div class="box">
  <div class="box-header">
    <h3 class="box-title">Has click para seleccionar el usuario</h3>
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Imagen</th>
          <th>Nombre</th>
        </tr>
      </thead>
      <tbody>
        <% @judges.each do |user| %>
          <% if user.id!=current_user.id %>
            <tr>
              <td>
                <% if user.uid!= nil %>
                  <%= link_to image_tag("http://graph.facebook.com/" + user.uid + "/picture?type=large", :class => "resizable_image"), {:controller => "smackdown_creator", :action => "select_game", :user_id => user.id }%>
                <% end %>
              </td>
              <td>
                <%= link_to user.name,{:controller => "home", :action => "respond_smackdown", :judge_id => user.id, :player2_accepted => true, :smackdown_id => @smackdown.id }%>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th>Imagen</th>
          <th>Nombre</th>
        </tr>
      </tfoot>
    </table>
  </div><!-- /.box-body -->
</div><!-- /.box -->

