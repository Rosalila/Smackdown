              data-href="http://smackdown.club/shareables/versus/<%= current_user.id %>/<%= user.id %>/<%= meta_image.id %>" data-width="20" data-layout="button">
            </div>
            </br> </br> </br>
          </td>
        </tr>
      </tbody>
      </table>
    </td>
  <%= "</tr>".html_safe if i%3==2 %>
