<h1 align="center">Historial de Smackdowns enviados</h1>

<p id="notice"><%= notice %></p>

Smackdown.where(:judge1_id=>current_user.id, :judge1_accepted => [true,false])

<% smackdown_pending = false %>
<hr>
<% @smackdowns.each do |smackdown| %>
  <% smackdown_pending = true %>
  <%= render 'uneditable_smackdown', :locals => {:smackdown=> smackdown} %>
  <HR> 
  </br>
<% end %>

<% if !smackdown_pending %>
  <p>Todavia no has completado ning√∫n Smackdown.</p>
<% end %>

<script>
    $(document).ready(function(){
      $("#button_show_smackdown_all").click(function(){
        <% @smackdowns.each do |smackdown| %>
          $("#ul_show_smackdown<%=smackdown.id%>").slideToggle("slow");
          $("#table_show_smackdown<%=smackdown.id%>").slideToggle("slow");
        <% end %>
        if($("#button_show_smackdown_all").text()=="Ver todos")
        {
          $("#button_show_smackdown_all").text("Ocultar todos");
        }else
        {
          $("#button_show_smackdown_all").text("Ver todos");
        }
      });
    });
</script>

