                <li class="dropdown messages-menu">
                  <% @pending_respond = pendingRespond %>
                  <% @pending_judge = pendingJudge %>
                  <% @pending = @pending_respond + @pending_judge %>
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-bell-o"></i>
                    <span class="label label-danger"><%= @pending.count %></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li class="header">Tú tienes <%= @pending.count %> notificaciones</li>
                    <li>
                      <!-- inner menu: contains the actual data -->
                      <ul class="menu">
                        <% @pending_respond.each do |smackdown| %>
                          <li><!-- start message -->
                            <a href="/home/respond_smackdown_page/<%= smackdown.id %>">
                              <div class="pull-left">
                                <img src="http://graph.facebook.com/<%= User.find_by_id(smackdown.player1_id).uid %>/picture?type=small" class="img-circle" alt="User Image"/>
                              </div>
                              <h4>
                                Smackdown!
                                <small><i class="fa fa-clock-o"></i><%= time_ago_in_words(smackdown.created_at) %> ago</small>
                              </h4>
                              <p><%= User.find_by_id(smackdown.player1_id).name %> te envio un smackdown.</p>
                            </a>
                          </li><!-- end message -->
                        <% end %>
                        <% @pending_judge.each do |smackdown| %>
                          <li><!-- start message -->
                            <a href="/home/judge_smackdown_page/<%= smackdown.id %>">
                              <div class="pull-left">
                                <img src="http://graph.facebook.com/<%= User.find_by_id(smackdown.player1_id).uid %>/picture?type=small" class="img-circle" alt="User Image"/>
                              </div>
                              <h4>
                                Juicio!
                                <small><i class="fa fa-clock-o"></i><%= time_ago_in_words(smackdown.created_at) %> ago</small>
                              </h4>
                              <% if smackdown.judge1_id == current_user.id && smackdown.judge2_id == current_user.id %>
                                <p><%= User.find_by_id(smackdown.player1_id).name %> y <%= User.find_by_id(smackdown.player2_id).name %> te solicitaron ser juez.</p>
                              <% elsif smackdown.judge1_id == current_user.id %>
                                <p><%= User.find_by_id(smackdown.player1_id).name %> te solocitó ser juez.</p>
                              <% else %>
                                <p><%= User.find_by_id(smackdown.player2_id).name %> te solocitó ser juez.</p>
