<section class="content-header">
  <h1>
    <%=t('Write_a_comment')%>
    <small><%=t('judge_a_smackdown')%></small>
  </h1>
</section>
<div class="box">
  <div class="box-body">
    <section class="content">
      <div class="row">
        <div class="col-lg-12 col-xs-12">
          <div class="box box-primary">
            <div class="box-header">
            </div>
            <form role="form" accept-charset="UTF-8" action="/home/judge_smackdown" method="get" class="nifty_form">
              <div class="form-group">
                <textarea name="judge_comment" class="form-control" rows="3" placeholder="<%=t('Write_your_comment_here')%>"></textarea>
                <input name="smackdown_id" type="hidden" value="<%= @smackdown.id %>" />
                <input name="judge_accepted" type="hidden" value="<%= @accepted %>" />
                <input name="winner_id" type="hidden" value="<%= @winner.id %>" />
                <div class="box-footer">
                <button type="submit" class="btn btn-primary"><%=t('Judge_verb')%>!</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
