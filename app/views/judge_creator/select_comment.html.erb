<%=@smackdown.id%>
<%=@accepted%>
<%=@winner.name%>


<section class="content">
  <div class="row">
    <div class="col-lg-4 col-xs-6">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Tu juicio</h3>
        </div>
        <form role="form" accept-charset="UTF-8" action="/home/judge_smackdown" method="get" class="nifty_form">
          <div class="form-group">
            <label>Tu comentario</label>
            <textarea name="judge_comment" class="form-control" rows="3" placeholder="Enter ..."></textarea>
            <input name="smackdown_id" type="hidden" value="<%= @smackdown.id %>" />
            <input name="judge_accepted" type="hidden" value="<%= @accepted %>" />
            <input name="winner_id" type="hidden" value="<%= @winner.id %>" />
            <div class="box-footer">
            <button type="submit" class="btn btn-primary">Juzgar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
